<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ảnh chính của khách sạn -->
        <ImageView
            android:id="@+id/imgHotelMain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
             />

        <!-- Tên khách sạn -->
        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Địa điểm khách sạn -->
        <TextView
            android:id="@+id/tvHotelLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Mô tả khách sạn -->
        <TextView
            android:id="@+id/tvHotelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Danh sách ảnh khách sạn -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/layoutHotelImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Các ảnh sẽ được thêm động vào đây -->
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Rooms"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/listViewRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:layout_marginBottom="16dp" />

        <!-- Danh sách bình luận -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <ListView
            android:id="@+id/listComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:layout_marginBottom="16dp" />
        <!-- Startbar -->


        <!-- Form thêm bình luận -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:rating="3"
            android:isIndicator="false"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/etNewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your comment..."
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="top" />
        <!-- Nút chọn ảnh -->

        <Button
            android:id="@+id/btnChooseImages"
            android:backgroundTint="@color/green"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Choose Images"
            android:layout_marginBottom="8dp" />

        <!-- Danh sách ảnh đã chọn -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:id="@+id/layoutSelectedImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnSubmitComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Comment"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_700"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
