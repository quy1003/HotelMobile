<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddHotelActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="305dp"
        android:layout_height="299dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="604dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/top_background" />

    <TextView
        android:id="@+id/txtEditCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:padding="10dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/edtName"
        android:layout_marginLeft="45dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Hotel's name"
        />
    <EditText
        android:id="@+id/edtName"
        android:layout_width="311dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Enter hotel's name ..."
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#707070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEditCategory" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/edtLocation"
        app:layout_constraintTop_toBottomOf="@+id/edtName"
        android:layout_marginLeft="45dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Hotel's Address"
        />
    <EditText
        android:id="@+id/edtLocation"
        android:layout_width="311dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Enter the address ..."
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#707070"
        app:layout_constraintBottom_toTopOf="@id/edtDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtName" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/edtDescription"
        app:layout_constraintTop_toBottomOf="@+id/edtLocation"
        android:layout_marginLeft="45dp"
        android:textSize="20sp"
        android:text="Description"
        />
    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="313dp"
        android:layout_height="55dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Enter the desciption ..."
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="#707070"
        app:layout_constraintBottom_toTopOf="@+id/linearL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtLocation" />
    <LinearLayout
        android:id="@+id/linearL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/edtDescription"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        android:orientation="horizontal"
        tools:ignore="UnknownId">

        <!-- TextView để hiển thị đường dẫn hoặc tên file -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_select_file"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp"
            android:text="Select your picture" />

        <TextView
            android:id="@+id/text_file_name"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="No item selected" />
    </LinearLayout>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SUBMIT"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toBottomOf="@+id/linearL"
        app:layout_constraintRight_toRightOf="parent"
        />
    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="338dp"
        android:layout_height="419dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="536dp"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="243dp"
        android:layout_height="410dp"
        android:layout_marginTop="348dp"
        android:layout_marginEnd="216dp"
        android:rotation="-90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:srcCompat="@drawable/top_background" />

</androidx.constraintlayout.widget.ConstraintLayout>