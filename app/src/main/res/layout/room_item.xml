<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp">

    <!-- Hình ảnh chính của phòng -->
    <ImageView
        android:id="@+id/imgRoomMain"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <!-- Thông tin của phòng -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <!-- Số phòng -->
        <TextView
            android:id="@+id/tvRoomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Number: 101"
            android:textStyle="bold"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Giá phòng -->
        <TextView
            android:id="@+id/tvRoomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $100/night"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark" />

        <!-- Trạng thái phòng -->
        <TextView
            android:id="@+id/tvRoomAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Tên khách sạn -->
        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel: Grand Palace"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Loại phòng -->
        <TextView
            android:id="@+id/tvRoomCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: Deluxe"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</LinearLayout>
