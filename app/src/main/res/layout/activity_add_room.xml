<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRoomActivity">

    <EditText
        android:id="@+id/edtRoomNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Room Number"
        android:padding="10dp" />

    <EditText
        android:id="@+id/edtRoomType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Room Type"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edtRoomNumber" />

    <EditText
        android:id="@+id/edtPricePerNight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Price Per Night"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/edtRoomType" />

    <Spinner
        android:id="@+id/spinnerAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edtPricePerNight" />

    <Spinner
        android:id="@+id/spinnerHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Select Hotel"
        app:layout_constraintTop_toBottomOf="@id/spinnerAvailability" />

    <Button
        android:id="@+id/button_select_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select Pictures"
        app:layout_constraintTop_toBottomOf="@id/spinnerHotel" />

    <TextView
        android:id="@+id/text_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="No items selected"
        app:layout_constraintTop_toBottomOf="@id/button_select_file" />

    <!-- Placeholder mặc định -->


    <ImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="413dp"
        android:layout_height="114dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="376dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/text_file_name"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
